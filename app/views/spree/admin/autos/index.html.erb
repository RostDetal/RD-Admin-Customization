<%= render 'spree/admin/shared/configuration_menu' %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t("partners.new_partner"), new_object_url, :icon => 'icon-plus', :id => 'admin_new_auto' %></li>
<% end %>

<% content_for :page_title do %>
   <%= Spree.t("partners.admin_partners") %>
<% end %>

<% if @autos.any? %>
<table class="index responsive" id="listing_pages" data-hook>
  <colgroup>
    <col style="width: 15">
    <col style="width: 30%">
    <col style="width: 25%">
    <col style="width: 10%">
    <col style="width: 10%">
  </colgroup>
  <thead>
    <tr data-hook="admin_partners_index_headers">
      <th><%= Spree.t("autos.auto_image") %></th>
      <th><%= Spree.t("autos.auto_name") %></th>
      <th><%= Spree.t("autos.auto_body") %></th>
      <th><%= Spree.t("autos.auto_year") %></th>
      <th data-hook="admin_autos_index_header_actions" class="actions"></th>
    </tr>
  </thead>

  <tbody>
    <% @autos.each do |auto| %>
      <tr data-hook="admin_partners_index_rows" class="<%= cycle('odd', 'even') %>" id="<%= dom_id auto %>">

        <td class="align-center">
          <%= image_tag(auto.image_link(:small))%>
        </td>

        <td class="align-center">
          <%= auto.name %>
        </td>
        <td class="align-center">
          <%= auto.body %>
        </td>
        <td class="align-center">
          <%= auto.year %>
        </td>
        <td class="actions" data-hook="admin_partners_index_row_actions">
          <%= link_to_edit auto, :no_text => true %>
          <%= link_to_delete auto, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <div class="alpha twelve columns no-objects-found">
    <%= Spree.t(:no_resource_found, resource: I18n.t(:other, scope: 'activerecord.models.spree/auto')) %>,
    <%= link_to Spree.t(:add_one), spree.new_admin_auto_path %>!
  </div>
<% end %>