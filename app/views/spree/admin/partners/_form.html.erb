<div data-hook="admin_partner_form_fields">

  <div data-hook="admin_partner_form_meta" class="alpha omega twelve columns">

    <%= f.field_container :pname do %>
        <%= f.label :name %><br />
        <%= f.text_field :pname, :class => 'fullwidth name' %>
        <%= f.error_message_on :pname %>
    <% end %>

    <%= f.field_container :phone do %>
        <%= f.label :phone %><br />
        <%= f.text_field :phone, :class => 'fullwidth phone' %>
        <%= f.error_message_on :phone %>
    <% end %>

    <%= f.field_container :unique do %>
        <%= f.label :unique %><br />
        <%= f.text_field :unique, :class => 'fullwidth unique' %>
        <%= f.error_message_on :unique %>
    <% end %>

    <%= f.field_container :site_url do %>
        <%= f.label :site_url %><br />
        <%= f.text_field :site_url, :class => 'fullwidth site_url'%>
        <%= f.error_message_on :site_url %>
    <% end %>

    <%= f.field_container :banner do %>
        <%= f.label :banner, Spree.t(:banner) %><br />
        <%= f.file_field :banner %>
    <% end %>

    <div data-hook="thumbnail" class="field alpha three columns align-center">
      <%= f.label Spree.t(:thumbnail) %><br>
      <%= image_tag(@partner.banner)%>
    </div>

    <div class="omega three columns">
      <%= f.field_container :in_banners do %>
          <%= f.label :in_banners, Spree.t(:in_banners) %>
          <%= f.error_message_on :in_banners %>
          <%= f.check_box :in_banners %>
      <% end %>
    </div>

  </div>
  <div class="clear"></div>
  <div data-hook="admin_partner_form_additional_fields"></div>
  <div class="clear"></div>
</div>